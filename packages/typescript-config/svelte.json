{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Svelte",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "../../types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "build", ".svelte-kit"]
}
